{% extends "layout.njk" %}
{% set pageTitle = 'Course Catalog' %}
{% set pageType = 'Courses' %}
{% block head %}
<title>{{ pageTitle }} | {{ siteName }}</title>
{% endblock %}

{% block content %}
<main id="main">

    <section aria-labelledby="page-title">
        {% include "partials/hero/hero-interior.njk" %}
    </section>

    <section aria-label="Photo overlap, Stats 2x2 grid, Stats row">
        <div class="wrapper wrapper-overlap">
            <div class="container">
                <div class="row">

                    <!-- LEFT COLUMN: WYSIWYG Demo -->
                    <div class="col-md-8 col-lg-9 order-md-2">
                        {% include "partials/form/search-form.njk" %}
                        {% include "partials/component/search-results.njk" %}
                        {% include "partials/snippet/pagination.njk" %}
                    </div>
                    <!-- /.col-md-8 .col-lg-9 -->

                    <!-- RIGHT COLUMN: Sidebar Demo -->
                    <div class="col-md-4 col-lg-3 order-md-1 mt-5 mt-md-0">
                        <aside class="sidebar">
                            <div class="heading h4 mb-4">Filter Results</div>
                            {% include "partials/form/search-filters.njk" %}
                            <div class="sidebar-cta sidebar-cta-purple">
								<img src="{{ includePath }}images/icons/bullhorn-w.svg" alt="" class="img-fluid mb-3 icon-md">
								<p class="h6">Can’t find what you’re looking for?</p>
								<a href="#" class="btn btn-accent-1 btn-lg btn-block mt-3">Contact Us</a>
							</div>
							<!-- /.sidebar-cta -->
                        </aside>
                    </div><!-- /.col-md-4 -->

                </div>
                <!-- /.row -->
            </div>
            <!-- /.container -->
        </div>
        <!-- /.wrapper -->
    </section>

</main>
{% endblock %}
